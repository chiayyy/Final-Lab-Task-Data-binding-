<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NotesApp.ViewModels"
             x:Class="NotesApp.Views.AllNotesPage"
             x:DataType="viewModels:NotesViewModel"
             Title="My Notes">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     Command="{Binding NewCommand}"
                     IconImageSource="{FontImage Glyph='+', Color=White, Size=28}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <CollectionView ItemsSource="{Binding AllNotes}"
                        Margin="15"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectNoteCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:NoteViewModel">
                    <Frame BackgroundColor="#E8F5E9"
                           BorderColor="#4CAF50"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto">
                            <Label Text="{Binding Text}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2E7D32"
                                   MaxLines="3"
                                   LineBreakMode="TailTruncation"
                                   Grid.Row="0"/>
                            <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                   FontSize="12"
                                   TextColor="#666"
                                   Grid.Row="1"
                                   Margin="0,5,0,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="50">
                    <Label Text="No notes yet!"
                           FontSize="24"
                           TextColor="#999"
                           HorizontalOptions="Center"/>
                    <Label Text="Tap + to create your first note"
                           FontSize="16"
                           TextColor="#BBB"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </ScrollView>
</ContentPage>
