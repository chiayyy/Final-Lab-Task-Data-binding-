<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:NotesApp.ViewModels"
             x:Class="NotesApp.Views.NotePage"
             x:DataType="viewModels:NoteViewModel"
             Title="Note">
    <VerticalStackLayout Spacing="10" Margin="15">
        <Editor x:Name="TextEditor"
                Placeholder="Enter your note"
                Text="{Binding Text}"
                HeightRequest="250"
                BackgroundColor="#F5F5DC"
                TextColor="#333"
                FontSize="16"/>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Grid.Column="0"/>

            <Button Text="Delete"
                    Command="{Binding DeleteCommand}"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Grid.Column="1"/>
        </Grid>

        <Label Text="{Binding Date, StringFormat='Last updated: {0:MMM dd, yyyy HH:mm}'}"
               FontSize="12"
               TextColor="#666"
               HorizontalOptions="Center"
               Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>
